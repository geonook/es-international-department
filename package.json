{
  "name": "kcislk-esid-info-hub",
  "version": "0.1.0",
  "description": "KCISLK ESID Info Hub - Information service website for parents and teachers of KCISLK Elementary School International Department",
  "private": true,
  "scripts": {
    "build": "next build",
    "dev": "next dev -p 3001",
    "lint": "next lint",
    "start": "next start -p 8080",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:migrate:reset": "prisma migrate reset",
    "db:studio": "prisma studio",
    "db:seed": "tsx prisma/seed.ts",
    "dev:db": "npm run db:generate && npm run dev",
    "build:production": "NODE_ENV=production npm run db:generate && npm run build",
    "build:staging": "NODE_ENV=staging npm run db:generate && npm run build",
    "deploy:dev": "npm run db:migrate:deploy && npm run db:seed",
    "deploy:staging": "NODE_ENV=staging npm run db:migrate:deploy",
    "deploy:production": "NODE_ENV=production npm run db:migrate:deploy",
    "env:check": "tsx scripts/check-env.ts",
    "env:validate": "tsx scripts/validate-env.ts",
    "env:switch": "tsx scripts/switch-env.ts",
    "zeabur:build": "pnpm run db:generate && pnpm run build",
    "zeabur:start": "pnpm run start",
    "zeabur:deploy": "pnpm run db:generate && pnpm run start",
    "backup:dev": "tsx scripts/backup-db.ts development",
    "backup:staging": "tsx scripts/backup-db.ts staging",
    "backup:production": "tsx scripts/backup-db.ts production",
    "clean": "rm -rf .next out dist build",
    "clean:all": "npm run clean && rm -rf node_modules && npm install",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:e2e": "playwright test",
    "test:security": "npm audit && eslint --ext .ts,.tsx .",
    "security:audit": "tsx scripts/security-audit.ts",
    "security:env": "tsx scripts/check-env-security.ts",
    "security:full": "npm run security:env && npm run security:audit",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:security",
    "test:suite": "tsx scripts/run-test-suite.ts",
    "test:api": "tsx scripts/run-api-tests.ts",
    "generate:api-tests": "tsx scripts/generate-api-tests.ts",
    "test:db": "tsx scripts/test-db-connection.ts",
    "test:zeabur": "tsx scripts/test-zeabur-connections.ts",
    "test:oauth-config": "tsx scripts/test-oauth-config.ts",
    "validate:oauth-production": "tsx scripts/validate-production-oauth.ts",
    "test:oauth-production": "tsx scripts/test-production-oauth.ts",
    "verify:production": "tsx scripts/verify-production-deployment.ts",
    "test:performance": "tsx scripts/performance-analysis.ts",
    "benchmark:api": "tsx scripts/performance-analysis.ts",
    "db:indexes": "psql $DATABASE_URL -f prisma/migrations/add_performance_indexes.sql",
    "report:performance": "tsx scripts/generate-performance-report.ts",
    "optimize:database": "npm run db:indexes && npm run test:performance",
    "test:upload": "tsx scripts/test-upload-system.ts",
    "test:email-system": "tsx scripts/test-email-system.ts",
    "setup:email": "tsx scripts/setup-email-service.ts",
    "setup:email:gmail": "tsx scripts/setup-email-service.ts --gmail-guide",
    "test:api-health": "tsx scripts/api-health-test.ts",
    "test:api-quick": "tsx scripts/quick-health-check.ts",
    "test:api-summary": "tsx scripts/api-health-summary.ts",
    "create:test-data": "node scripts/create-test-data.js"
  },
